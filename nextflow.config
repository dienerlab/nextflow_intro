profiles {
    standard {
        executor {
            name = "local"
            cpus = 8
            memory = "128 GB"
        }
    }

    slurm {
        executor {
            name = "slurm"
            queueSize = 40
            pollInterval = '30 sec'
            dumpInterval = '20 sec'
            queueStatInterval = '1 min'
            exitReadTimeout = '5 min'
            killBatchSize = 50
            submitRateLimit = '40/1min'
            clusterOptions = '-p cpu'
        }
            process.scratch = '$TMPDIR'

    }

    tower {
        workspaceId = "<my-id>"
        accessToken = "<my-token>"
        enabled = false
    }
}

singularity.runOptions = "--no-home -B /home/isilon/users/$USER,/home/gpfs/$USER,$TMPDIR"